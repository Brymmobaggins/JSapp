<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SpendWise</title>
    <link rel="stylesheet" href="/style.css" />

  </head>
  <body>
    <header class="bg-slate-500 h-16 w-full mt-2">
      <nav
        class="flex justify-between w-full max-w-[1300px] m-auto text-white size-12"
      >
        <div class="p-3 flex items-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="size-10 stroke-1 stroke-yellow-400"
          >
            <path d="M4.5 3.75a3 3 0 0 0-3 3v.75h21v-.75a3 3 0 0 0-3-3h-15Z" />
            <path
              fill-rule="evenodd"
              d="M22.5 9.75h-21v7.5a3 3 0 0 0 3 3h15a3 3 0 0 0 3-3v-7.5Zm-18 3.75a.75.75 0 0 1 .75-.75h6a.75.75 0 0 1 0 1.5h-6a.75.75 0 0 1-.75-.75Zm.75 2.25a.75.75 0 0 0 0 1.5h3a.75.75 0 0 0 0-1.5h-3Z"
              clip-rule="evenodd"
            />

          </svg>

          <span class="text-lg laptop:text-2xl font-bold font-barrio text-yellow-500">
            <a href="/"> SpendWise</a>
          </span>
        </div>
        <div
          class="pt-2 mr-1 hover:cursor-pointer *:border *:p-1 *:rounded *:text-xs *:font-medium *:laptop:text-sm *:font-sans *:hover:opacity-100"
        >
          <button
            class="bg-gray-50 border-gray-50 hover:bg-gray-100 shadow-md text-black mr-2"
            id="log-in"
          >Log in</button>

          <button class="whitespace-nowrap">
            <a href="/login">Log out</a>
          </button>
        </div>
      </nav>
    </header>
    <main class="bg-gray-100">
      <div class="w-full max-w-[650px] m-auto mt-8 px-4">
        <div class="flex justify-between items-center">
          <div class="">
            <button
              class="bg-green-600 border-green-600 hover:bg-green-700 font-sans rounded-md text-white text-xs p-1.5 shadow laptop:text-sm"
              id="open-button"
            >
              Add Expense
            </button>
            <button
              class="bg-[#1a75cf] hover:bg-blue-500 border-[#1a75cf] font-sans rounded-md text-white text-xs p-1.5 shadow laptop:text-sm"
              id="open-button"
            >
              Expense report
            </button>
          </div>
          <div class="relative">
            <div
              class="absolute inset-y-0 start-0 flex items-center ps-2 pointer-events-none"
            >
              <svg
                class="w-4 h-4 text-gray-500 dark:text-gray-400"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 20 20"
              >
                <path
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"
                />
              </svg>
            </div>
            <input
              class="block w-full ps-7 text-gray-900 border border-gray-500 p-1.5 outline-none rounded focus:border-blue-400 text-xs placeholder:italic placeholder:text-slate-300 laptop:text-sm"
              id="search"
              placeholder="Search by description or category"
              type="text"
              name="search"
            />

          </div>
        </div>
        <div class="max-w-[750px] w-full mt-2">
          <table class="w-[55%] shadow">
            <thead>
              <tr
                class="w-full max-w-[50%]: text-left font-sans border *:text-gray-600 *:py-2 *:px-0.5 *:m-2 text-xs laptop:text-[14px] font-extralight *:whitespace-nowrap"
              >
                <th>Item ID</th>
                <th>Item Name</th>
                <th>Amount</th>
                <th>Expense Date</th>
                <th>Category</th>
                <th>Action Item</th>
              </tr>
            </thead>
            <tbody id="item-list" class="font-sans"></tbody>
          </table>
          <div class="mt-2 text-right text-slate-600 text-sm p-1.5">
            Total Expenses: $<span
              id="total-expenses"
              class="font-bold"
            >0.00</span>
          </div>
        </div>
      </div>
      <!-- modal background -->
      <div
        class="fixed w-full h-full overflow-auto left-0 bottom-0 top-0 z-10 bg-[#00000066] pt-[100px]"
        id="modal"
      >
        <!-- modal -->
        <div
          class="w-full m-auto max-w-[400px] bg-white border border-white rounded p-3 xs:w-full"
          id="modal-parent"
        >
          <div
            class="flex justify-between items-center border-b border-gray-900 h-12"
          >
            <div class="text-2xl">Add Expense</div>
            <span
              class="text-2xl font-bold cursor-pointer text-gray-500"
              id="close-button"
            >&times;</span>
          </div>
          <!-- modal form -->
          <form class="*:mt-4">
            <!-- Item Name -->

            <div class="">
              <label for="item-name" class="text-sm font-sans font-normal">Item
                name</label>
              <input
                type="text"
                id="item-name"
                class="w-full text-sm block border-0 text-gray-900 p-1.5 rounded-md ring-1 ring-inset ring-gray-300 focus:ring-inset focus:ring-green-600 outline-none"
                autocomplete="off"
              />
            </div>
            <!-- Category -->
            <div class="">
              <label
                for="category"
                class="text-sm font-sans font-normal block"
              >Category</label>
              <select
                name="category"
                id="category"
                class="w-full border outline-none focus:ring-inset ring-1 ring-inset ring-gray-300 focus:ring-green-600 font-normal font-sans text-sm p-1.5 rounded-md"
              >
                <option>---select your category---</option>
                <option value="Food">Food</option>
                <option value="Shopping">Shopping</option>
                <option value="Travel">Travel</option>
                <option value="Health">Health</option>
              </select>
            </div>
            <!-- item Amount -->
            <div class="">
              <label
                for="Amount"
                class="text-sm font-sans font-normal"
              >Amount</label>
              <input
                type="text"
                id="item-amount"
                class="w-full text-sm block border-0 text-gray-900 p-1.5 rounded-md ring-1 ring-inset ring-gray-300 focus:ring-inset focus:ring-green-600 outline-none"
                autocomplete="off"
              />
            </div>
            <!-- Expense Date -->
            <div class="">
              <label for="Amount" class="text-sm font-sans font-normal">Expense
                Date</label>
              <input
                type="date"
                id="expense-date"
                class="w-full text-sm block border-0 text-gray-900 p-1.5 rounded-md ring-1 ring-inset ring-gray-300 focus:ring-inset focus:ring-green-600 outline-none"
                autocomplete="off"
              />
            </div>
            <div class="">
              <button
                class="border w-full bg-green-500 hover:bg-green-400 p-1.5 font-medium"
              >
                Save
              </button>
            </div>
          </form>
        </div>
      </div>
    </main>
    <script src="./script.js"></script>
  </body>
</html>