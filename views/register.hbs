<html lang="en" class="bg-gray-50">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <link href="/style.css" rel="stylesheet" />
  </head>
  <body>
    <header class="bg-slate-600 h-16 w-full mt-2">
      {{! navigation bar }}
      <nav
        class="flex justify-between w-full max-w-[1300px] m-auto text-white size-12"
      >
        <div class="p-3 flex items-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="size-10 stroke-1 stroke-yellow-400"
          >
            <path d="M4.5 3.75a3 3 0 0 0-3 3v.75h21v-.75a3 3 0 0 0-3-3h-15Z" />
            <path
              fill-rule="evenodd"
              d="M22.5 9.75h-21v7.5a3 3 0 0 0 3 3h15a3 3 0 0 0 3-3v-7.5Zm-18 3.75a.75.75 0 0 1 .75-.75h6a.75.75 0 0 1 0 1.5h-6a.75.75 0 0 1-.75-.75Zm.75 2.25a.75.75 0 0 0 0 1.5h3a.75.75 0 0 0 0-1.5h-3Z"
              clip-rule="evenodd"
            />

          </svg>

          <span
            class="text-lg laptop:text-2xl font-bold font-barrio text-yellow-500"
          >
            <a href="/"> SpendWise</a>
          </span>
        </div>
        <div
          class="pt-2 mr-1 hover:cursor-pointer *:border *:p-1 *:rounded *:text-xs *:font-medium *:laptop:text-sm *:font-sans *:hover:opacity-100"
        >
          <button
            class="bg-gray-50 border-gray-50 hover:bg-gray-100 shadow-md text-black mr-2"
            id="log-in"
          >Log in</button>

          <button class="whitespace-nowrap">
            <a href="/login">Log out</a>
          </button>
        </div>
      </nav>
    </header>

    <main>
      <div
        class="border border-gray-500 rounded-md container bg-white w-full max-w-[300px] mx-auto p-1 mt-8"
      >
        {{! handle bars if else condition }}
        {{#if message}}
          <div class="danger">{{message}}</div>
        {{/if}}
        {{! Register form }}
        <div class="p-2 text-lg font-bold">Register here</div>
        <form action="/auth/register" method="POST">
          <div class="*:mt-1">
            <label for="name" class="block">
              <span class="block text-sm font-medium text-slate-700">Name</span>
              <input
                type="text"
                class="w-full font-mono text-sm p-2 border outline-none focus:ring-inset ring-1 ring-inset ring-gray-300 focus:ring-gray-600 rounded"
                placeholder=""
                id="name"
                name="name"
              />
            </label>

            <label for="e-mail" class="block">
              <span
                class="block text-sm font-medium text-slate-700"
              >E-mail</span>
              <input
                type="email"
                class="w-full font-mono text-sm p-2 border outline-none focus:ring-inset ring-1 ring-inset ring-gray-300 focus:ring-gray-600 rounded"
                id="email"
                name="email"
              />
            </label>

            <label for="password" class="block">
              <span
                class="block text-sm font-medium text-slate-700"
              >Password</span>
              <input
                type="password"
                class="w-full font-mono text-xs p-2 border outline-none focus:ring-inset ring-1 ring-inset ring-gray-300 focus:ring-gray-600 rounded"
                id="password"
                name="password"
              />
            </label>

            <label for="passwordConfirm" class="block">
              <span class="block text-sm font-medium text-slate-700">Confirm
                Password</span>
              <input
                type="password"
                class="w-full font-mono text-xs p-2 border outline-none focus:ring-inset ring-1 ring-inset ring-gray-300 focus:ring-gray-600 rounded"
                id="passwordConfirm"
                name="passwordConfirm"
              />
            </label>
            <button
              class="mt-3 border bg-green-500 hover:bg-green-600 outline-none w-full text-white font-semibold p-1 rounded"
            >
              Create an account
            </button>
          </div>
        </form>

      </div>
    </main>

    {{! <script src="/dist/script.js"></script>    }}
  </body>
</html>